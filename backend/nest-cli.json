{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.html",
        "outDir": "dist"
      },
      {
        "include": "ai-models/kokoro-tts/voices/*.bin",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}
